@page
@model IdentityServerAdmin.Pages.Api.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Api Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Api.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Api.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Api.DisplayName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Api.DisplayName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Api.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Api.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Api.Enabled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Api.Enabled)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Api.NonEditable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Api.NonEditable)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Api.Id">Edit</a> |
    <a asp-page="./Index">Back to Api List</a>
</div>
<br />
<h4>Scopes list</h4>
<div>
    @if (Model.Api.Scopes.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Api.Scopes.FirstOrDefault().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Api.Scopes.FirstOrDefault().DisplayName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Api.Scopes.FirstOrDefault().Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Api.Scopes.FirstOrDefault().Emphasize)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Api.Scopes.FirstOrDefault().Required)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Api.Scopes.FirstOrDefault().ShowInDiscoveryDocument)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Api.Scopes.FirstOrDefault().ApiResourceId)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Api.Scopes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisplayName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Emphasize)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Required)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShowInDiscoveryDocument)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApiResourceId)
                        </td>
                        <td>
                            <a asp-page="../ApiScope/Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="../ApiScope/Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="../ApiScope/Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div>
            <i>No scopes assigned to this api</i>
        </div>
    }
</div>
<p>
    <a asp-page="../ApiScope/Create" asp-route-apiresourceId="@Model.Api.Id">Assign Scope</a>
</p>
